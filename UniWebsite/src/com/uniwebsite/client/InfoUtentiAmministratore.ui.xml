<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
			
		#content {
			margin: 30px;
		}
		
		#nav {
			background-color: lightgrey;
		}
		
		#logo {
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		
		#btn {
			margin-top: 10px;
			display: flex;
			flex-direction: row;
			justify-content: space-around;
		}
	
	</ui:style>

	<g:HTMLPanel>
		
		<div id="nav">
			<img id="logo" src="logo.png" height="150px"/>
	    </div>
	    <div id="btn">
	    	<g:HorizontalPanel>
	    		<g:Button ui:field = "btnHome" text="Home"/>
	    		<g:Button ui:field = "btnVisualizza" text="Visualizza Account"/>
	       		<g:Button ui:field = "btnCreaAccount" text="Crea Account"/>
	       		<g:Button ui:field = "btnGestisci" text="Modifica Account"/>
	      		<g:Button ui:field = "btnLogout" text="Logout"/>
	    	</g:HorizontalPanel> 
	    </div>
	   	
		<div id="content">
	    	<div>
				<h2>Studenti</h2>
				<c:CellTable ui:field='cellTableStud'></c:CellTable>
	    	</div>
	    	<br></br>
	    	<div>
				<h2>Docenti</h2>
				<c:CellTable ui:field='cellTableDoc'></c:CellTable>
	    	</div>
	    	<br></br>
	    	<div>
				<h2>Segreteria</h2>
				<c:CellTable ui:field='cellTableSeg'></c:CellTable>
	    	</div>
		</div>
	</g:HTMLPanel>
	
</ui:UiBinder> 
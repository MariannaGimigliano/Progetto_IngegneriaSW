<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
			
		#content {
			margin: 30px;
		}
	
	</ui:style>

	<g:HTMLPanel>
		<div id="content">
		
			<img id="logo" src="logo.jpeg" height="150px"/>
	    
	    	<g:HorizontalPanel>
	    		<g:Button ui:field = "btnHome" text="Home"/>
	       		<g:Button ui:field = "btnCorsi" text="Corsi"/>
	       		<g:Button ui:field = "btnEsami" text="Esami"/>
	      		<g:Button ui:field = "btnVoti" text="Voti"/>
	      		<g:Button ui:field = "btnPers" text="Area Personale"/>
	      		<g:Button ui:field = "btnLogout" text="Logout"/>
	    	</g:HorizontalPanel> 
	    	
	    	<div>
				<h2>Elenco degli esami disponibili</h2>
				<p>Sono disponibili solo gli esami dei corsi a cui sei iscritto.</p>
				<c:CellTable ui:field='cellTable'></c:CellTable>
				
			    <br></br>
			    
			    <h2>Iscriviti ad un esame</h2>
			    <div>
					<label>Esame </label>
				    <gwt:ListBox ui:field="listaEsami"></gwt:ListBox>
				  	<gwt:Button ui:field="btnIscriviti" text="Iscriviti"></gwt:Button>
			    </div>
	    	</div>
	    	
		</div>
	</g:HTMLPanel>
	
</ui:UiBinder> 